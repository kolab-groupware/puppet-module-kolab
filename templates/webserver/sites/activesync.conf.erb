# Managed by Puppet
# from modules/kolab/templates/webserver/sites/webmail.conf.erb
#
<%
    vhost_domain = scope.lookupvar("kolab::params::kolab_primary_domain")

    if !@vhost_domain then
        vhost_domain = @domain
    end
-%>
<VirtualHost *:80>
    ServerName activesync.<%= vhost_domain %>
    ServerAdmin support@kolabsys.com

    DocumentRoot /usr/share/roundcubemail/

    ErrorLog "|/usr/sbin/rotatelogs -L /var/log/httpd/activesync.<%= vhost_domain -%>-error_log -f -l /var/log/httpd/activesync.<%= vhost_domain -%>-error_log.%Y-%m-%d 86400"
    CustomLog "|/usr/sbin/rotatelogs -L /var/log/httpd/activesync.<%= vhost_domain -%>-access_log -f -l /var/log/httpd/activesync.<%= vhost_domain -%>-access_log.%Y-%m-%d 86400" combined

    RewriteEngine On
    RewriteRule ^/(.*)$ https://activesync.<%= vhost_domain -%>/$1 [R,L]

    <Directory "/usr/share/roundcubemail/">
        AllowOverride All
        <ifModule mod_authz_core.c>
            Require all granted
        </ifModule>
        <ifModule !mod_authz_core.c>
            Order Allow,Deny
            Allow from All
        </ifModule>
    </Directory>

</VirtualHost>

<VirtualHost *:443>
    ServerName activesync.<%= vhost_domain %>
    ServerAdmin support@kolabsys.com

    DocumentRoot /usr/share/roundcubemail/

    ErrorLog "|/usr/sbin/rotatelogs -L /var/log/httpd/activesync.<%= vhost_domain -%>-error_log -f -l /var/log/httpd/activesync.<%= vhost_domain -%>-error_log.%Y-%m-%d 86400"
    CustomLog "|/usr/sbin/rotatelogs -L /var/log/httpd/activesync.<%= vhost_domain -%>-access_log -f -l /var/log/httpd/activesync.<%= vhost_domain -%>-access_log.%Y-%m-%d 86400" combined
    CustomLog "|/usr/sbin/rotatelogs -L /var/log/httpd/activesync.<%= vhost_domain -%>-ssl_log -f -l /var/log/httpd/activesync.<%= vhost_domain -%>-ssl_log.%Y-%m-%d 86400" "%t %h %{SSL_PROTOCOL}x %{SSL_CIPHER}x \"%r\" %b"

    ScriptAlias /Microsoft-Server-ActiveSync /usr/share/kolab-syncroton/index.php

    <ifModule mod_headers.c>
        Header set Strict-Transport-Security "max-age=16070400; includeSubDomains"
    </ifModule>

    SSLEngine On
    SSLProtocol all -SSLv2 -SSLv3
    SSLHonorCipherOrder on
    SSLCipherSuite "EECDH+ECDSA+AESGCM EECDH+aRSA+AESGCM EECDH+ECDSA+SHA384 \
        EECDH+ECDSA+SHA256 EECDH+aRSA+SHA384 EECDH+aRSA+SHA256 EECDH+aRSA+RC4 \
        EECDH EDH+aRSA RC4 !aNULL !eNULL !LOW !3DES !MD5 !EXP !PSK !SRP !DSS"

    SSLCertificateFile /etc/pki/tls/certs/activesync.<%= vhost_domain -%>.cert
    SSLCertificateKeyFile /etc/pki/tls/private/activesync.<%= vhost_domain -%>.key
    SSLCACertificateFile /etc/pki/tls/certs/activesync.<%= vhost_domain -%>.ca.cert

    <Directory "/usr/share/kolab-syncroton/">
        AllowOverride All
        <ifModule mod_authz_core.c>
            Require all granted
        </ifModule>
        <ifModule !mod_authz_core.c>
            Order Allow,Deny
            Allow from All
        </ifModule>
    </Directory>

    <Directory "/usr/share/kolab-syncroton/config/">
        <ifModule mod_authz_core.c>
            Require all denied
        </ifModule>
        <ifModule !mod_authz_core.c>
            Order Deny,Allow
            Deny from All
        </ifModule>
    </Directory>

    <Directory "/usr/share/kolab-syncroton/lib/">
        <ifModule mod_authz_core.c>
            Require all denied
        </ifModule>
        <ifModule !mod_authz_core.c>
            Order Deny,Allow
            Deny from All
        </ifModule>
    </Directory>

    <Directory "/usr/share/kolab-syncroton/logs/">
        <ifModule mod_authz_core.c>
            Require all denied
        </ifModule>
        <ifModule !mod_authz_core.c>
            Order Deny,Allow
            Deny from All
        </ifModule>
    </Directory>

    <Directory "/usr/share/roundcubemail/">
        AllowOverride All
        <ifModule mod_authz_core.c>
            Require all granted
        </ifModule>
        <ifModule !mod_authz_core.c>
            Order Allow,Deny
            Allow from All
        </ifModule>
    </Directory>

    <Directory "/usr/share/roundcubemail/logs/">
        <ifModule mod_authz_core.c>
            Require all denied
        </ifModule>
        <ifModule !mod_authz_core.c>
            Order Deny,Allow
            Deny from All
        </ifModule>
    </Directory>

</VirtualHost>

# Managed by Puppet
# from modules/kolab/templates/webserver/sites/files.conf.erb
#
<%
    vhost_domain = scope.lookupvar("kolab::params::kolab_primary_domain")

    if !@vhost_domain then
        vhost_domain = @domain
    end
-%>
<VirtualHost *:80>
    ServerName files.<%= vhost_domain %>
    ServerAdmin support@kolabsys.com

    DocumentRoot /usr/share/chwala/public_html/

    ErrorLog "|/usr/sbin/rotatelogs -L /var/log/httpd/files.<%= vhost_domain -%>-error_log -f -l /var/log/httpd/files.<%= vhost_domain -%>-error_log.%Y-%m-%d 86400"
    CustomLog "|/usr/sbin/rotatelogs -L /var/log/httpd/files.<%= vhost_domain -%>-access_log -f -l /var/log/httpd/files.<%= vhost_domain -%>-access_log.%Y-%m-%d 86400" combined env=!prx
    CustomLog "|/usr/sbin/rotatelogs -L /var/log/httpd/files.<%= vhost_domain -%>-access_log -f -l /var/log/httpd/files.<%= vhost_domain -%>-access_log.%Y-%m-%d 86400" combined_prx env=prx

    RewriteEngine On
    RewriteRule ^/(.*)$ https://files.<%= vhost_domain -%>/$1 [R,L]

    <Directory "/usr/share/chwala/public_html/">
        AllowOverride All
        <ifModule mod_authz_core.c>
            Require all granted
        </ifModule>
        <ifModule !mod_authz_core.c>
            Order Allow,Deny
            Allow from All
        </ifModule>
    </Directory>

</VirtualHost>

<VirtualHost *:443>
    ServerName files.<%= vhost_domain %>
    ServerAdmin support@kolabsys.com

    DocumentRoot /usr/share/chwala/public_html/

    ErrorLog "|/usr/sbin/rotatelogs -L /var/log/httpd/files.<%= vhost_domain -%>-error_log -f -l /var/log/httpd/files.<%= vhost_domain -%>-error_log.%Y-%m-%d 86400"
    CustomLog "|/usr/sbin/rotatelogs -L /var/log/httpd/files.<%= vhost_domain -%>-access_log -f -l /var/log/httpd/files.<%= vhost_domain -%>-access_log.%Y-%m-%d 86400" combined env=!prx
    CustomLog "|/usr/sbin/rotatelogs -L /var/log/httpd/files.<%= vhost_domain -%>-access_log -f -l /var/log/httpd/files.<%= vhost_domain -%>-access_log.%Y-%m-%d 86400" combined_prx env=prx
    CustomLog "|/usr/sbin/rotatelogs -L /var/log/httpd/files.<%= vhost_domain -%>-ssl_log -f -l /var/log/httpd/files.<%= vhost_domain -%>-ssl_log.%Y-%m-%d 86400" "%t %h %{SSL_PROTOCOL}x %{SSL_CIPHER}x \"%r\" %b" env=!prx
    CustomLog "|/usr/sbin/rotatelogs -L /var/log/httpd/files.<%= vhost_domain -%>-ssl_log -f -l /var/log/httpd/files.<%= vhost_domain -%>-ssl_log.%Y-%m-%d 86400" "%t %{X-Forwarded-For}i %{SSL_PROTOCOL}x %{SSL_CIPHER}x \"%r\" %b" env=prx

    <ifModule mod_headers.c>
        Header set Strict-Transport-Security "max-age=16070400; includeSubDomains"
    </ifModule>

    SSLEngine On
    SSLProtocol all -SSLv2 -SSLv3
    SSLHonorCipherOrder on
    SSLCipherSuite "EECDH+ECDSA+AESGCM EECDH+aRSA+AESGCM EECDH+ECDSA+SHA384 \
        EECDH+ECDSA+SHA256 EECDH+aRSA+SHA384 EECDH+aRSA+SHA256 EECDH+aRSA+RC4 \
        EECDH EDH+aRSA RC4 !aNULL !eNULL !LOW !3DES !MD5 !EXP !PSK !SRP !DSS"

    SSLCertificateFile /etc/pki/tls/certs/files.<%= vhost_domain -%>.cert
    SSLCertificateKeyFile /etc/pki/tls/private/files.<%= vhost_domain -%>.key
    SSLCACertificateFile /etc/pki/tls/certs/files.<%= vhost_domain -%>.ca.cert

    <Directory "/usr/share/chwala/public_html/">
        AllowOverride All
        <ifModule mod_authz_core.c>
            Require all granted
        </ifModule>
        <ifModule !mod_authz_core.c>
            Order Allow,Deny
            Allow from All
        </ifModule>
    </Directory>

</VirtualHost>
